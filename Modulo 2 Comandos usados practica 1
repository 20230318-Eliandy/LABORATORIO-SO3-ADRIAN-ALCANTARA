date

sudo apt update 

sudo apt upgrade

cat /etc/apt/sources.list

apt search bashtop

sudo apt install bashtop
 
sudo apt install curl

curl -s https://api.github.com/repos/aristocratos/bashtop/releases/latest | grep browser_download_url | grep .deb

wget https://github.com/aristocratos/bashtop/releases/download/v0.9.25/bashtop_0.9.25_amd64.deb

sudo apt install ./bashtop_0.9.25_amd64.deb

bashtop

sudo apt purge bashtop -y

sudo apt autoremove --purge -y
